{
  "singleQuote": true,
  "trailingComma": "all",
  "arrowParens": "avoid",
  "endOfLine": "auto",
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrder": [
    "^@/types/(.)$",
    "^@/app/(.*)$",
    "^@/components/(.)$",
    "^@/context/(.)$",
    "^@/flows/(.)$",
    "^@/hook/(.)$",
    "^@/infra/(.)$",
    "^@/lib/(.)$",
    "^@/utils/(.)$",
    "^[./]"
  ]
}